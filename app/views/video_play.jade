extends ./common/layout
append header
	link(rel='stylesheet',href='/stylesheets/user_validate.css')
	link(rel='stylesheet',href='/stylesheets/video.css')
	link(rel='stylesheet',href='/stylesheets/video-js.min.css')
block content
	include ./common/nav
	include ./common/signinModal
	include ./common/signupModal
	.container
		.col-md-12
			h2.video-title 视频: 健身励志视频 - 致敬Greg Plitt（普利特格雷格）
		.col-md-9
			video#greg-plitt-1.video-js.vjs-default-skin(controls,preload="none",width="800",height="450", poster="/images/body1.jpg",data-setup="{}")
				source(src="/videos/bodybuilding.webm",type="video/mp4")
				source(src="/videos/bodybuilding.webm",type="video/webm")
				source(src="/videos/bodybuilding.webm",type="video/ogg")
				p.vjs-no-js To view this video please enable JavaScript, and consider upgrading to a web browser that 
					a(href="http://videojs.com/html5-video-support/",target="_blank") supports HTML5 video
		.col-md-3
			ul
				li: a(href='#') 1
				li: a(href='#') 2
				li: a(href='#') 3
				li: a(href='#') 4
				li: a(href='#') 5
				
	script(src="/javascripts/jquery.validate.js",type='text/javascript')
	script(src='/javascripts/user_validate.js',type='text/javascript')
	script(src='/javascripts/video.min.js',type='text/javascript')
	script(text='text/javascript')
