extends ./common/layout_admin
append header
	link(rel='stylesheet',href='/stylesheets/admin.css')
block content
	include ./common/admin_header

	.container.admin-news
		.admin-news-wrap
			h3 新闻管理
			.row.news-manager
				.col-md-4
					.input-group
						input.form-control(type="text",placeholder="Search for...")
						span.input-group-btn
							button#serach.btn.btn-default(type="button") Go!
				.col-md-5
				.col-md-3
					button.btn.btn-default.pull-right#add-news(data-target='#newsForm',data-toggle='modal') 添加新闻
			table.table.table-hover
				thead
					th #
					th 标题
					th 地址
					th 时间
					th 图片地址
					th 赞
					th 收藏
					th 内容
					th 添加人
					th 操作
				tbody
					tr(data-id='fjf9alsdjkfasdfjalsjfd12384y')
