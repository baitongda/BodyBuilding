						td.news-title 我是新闻的标题	
						td.news-url http://www.baidu.com/p/123456http://www.baidu.com/p/123456http://www.baidu.com/p/123456http://www.baidu.com/p/123456
						td.news-date 2016-5-5
						td.news-image http://www.hao123.comhttp://www.hao123.comhttp://www.hao123.comhttp://www.hao123.com
						td.news-fork 0
						td.news-fav 0
						td.news-content 我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容
						td.news-user Sun.
						td.admin-user-handle
							span: a.admin-user-edit(href="#",data-target='#newsForm',data-toggle='modal') 编辑
							span: a.admin-user-delete 删除
					
			.admin-user-page.pull-right
				nav
					ul.pagination
						li: a(href='#',aria-label='Previous'): span(aria-hidden='true') &laquo;
						li.active: a(href='#') 1
						li: a(href='#') 2
						li: a(href='#') 3
						li: a(href='#') 4
						li: a(href='#') ...
						li: a(href='#') 10
						li: a(href='#',aria-label='Next'): span(aria-hidden='true') &raquo; 
		
	//- add news modal
	.modal.fade#newsForm(tabindex='-1',role='dialog',aria-labelledby="myModalLabel")
		.modal-dialog(role='document')
			.modal-content
				form.form-horizontal#newsForm(method='POST',action='/signin')
					.modal-header 
						span.header-title 添加新闻
						button.close(type='button',data-dismiss='modal',aria-label='Close'): span(aria-hidden='true') &times;
					.modal-body
						.form-group
							label.control-label.col-sm-2(for='news-title') 标题
							.col-sm-10
								input.form-control#news-title(type='text',name='news[title]',placeholder='Title',aria-describedby='add_news_right')
						.form-group
							label.control-label.col-sm-2(for='news-url') 地址
							.col-sm-10
								input.form-control#news-url(type='text',name='news[url]',placeholder='Url',aria-describedby='add_news_right')
						.form-group
							label.control-label.col-sm-2(for='news-date') 时间
							.col-sm-10
								input.form-control#news-date(type='text',name='news[date]',placeholder='Date',aria-describedby='add_news_right')
						.form-group
							label.control-label.col-sm-2(for='news-image') 图片地址
							.col-sm-10
								input.form-control#news-image(type='text',name='news[image]',placeholder='Image',aria-describedby='add_news_right')
						.form-group
							label.control-label.col-sm-2(for='news-fork') 赞
							.col-sm-10
								input.form-control#news-fork(type='text',name='news[fork]',placeholder='Fork',aria-describedby='add_news_right')
						.form-group
							label.control-label.col-sm-2(for='news-fav') 收藏
							.col-sm-10
								input.form-control#news-fav(type='text',name='news[fav]',placeholder='Fav',aria-describedby='add_news_right')
						.form-group
							label.control-label.col-sm-2(for='news-content') 内容
							.col-sm-10
								textarea.form-control#news-content(name='news[content]',rows='5',placeholder='Content',aria-describedby='add_news_right')
						.form-group
							label.control-label.col-sm-2(for='news-admin') 添加人
							.col-sm-10
								select.form-control#news-admin(type='select',name='news[admin]',aria-describedby='add_news_right')
									option Sun.
									option Ju.
									option John.
									option Papi酱
					.modal-footer
						.form-group
							.col-sm-offset-2.col-sm-2
								button.btn.btn-default(type='button',data-dismiss='modal') Cancel
							.col-sm-2
								button.btn.btn-success(type='submit') Confirm	
			

	script(src='/javascripts/footer.js',type='text/javascript')
	script(src='/javascripts/admin_new.js',type='text/javascript')