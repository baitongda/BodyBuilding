						td.user-name admin
						td.user-root 超级管理员
						td.user-phone 15551880000
						td.user-date 2015-10-10
						td.admin-user-handle
							span: a.admin-user-edit(href="#",data-target='#userForm',data-toggle='modal') 编辑
							span: a.admin-user-delete 删除
					tr(data-id='fjf9alsdjkfasdfjalsjfd12384y')
						td 2
						td.user-name admin
						td.user-root 超级管理员
						td.user-phone 15551880000
