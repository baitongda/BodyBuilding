							span: a.admin-user-edit(href="#",data-target='#userForm',data-toggle='modal') 编辑
							span: a.admin-user-delete 删除
			.admin-user-page.pull-right
				nav
					ul.pagination
						li: a(href='#',aria-label='Previous'): span(aria-hidden='true') &laquo;
						li.active: a(href='#') 1
						li: a(href='#') 2
						li: a(href='#') 3
						li: a(href='#') 4
						li: a(href='#') ...
						li: a(href='#') 10
						li: a(href='#',aria-label='Next'): span(aria-hidden='true') &raquo;
	//- add user modal
	.modal.fade#userForm(tabindex='-1',role='dialog',aria-labelledby="myModalLabel")
		.modal-dialog(role='document')
			.modal-content
				form.form-horizontal#userForm(method='POST',action='/admin/user/edit')
					.modal-header 
						span.header-title 编辑用户
						button.close(type='button',data-dismiss='modal',aria-label='Close'): span(aria-hidden='true') &times;
					.modal-body
						.form-group
							label.control-label.col-sm-2(for='username') 用户名
							.col-sm-10
								input.form-control#username(type='text',name='user[name]',placeholder='Username',aria-describedby='add_user_right')
						.form-group
							label.control-label.col-sm-2(for='password') 密码
							.col-sm-10
								input.form-control#password(type='text',name='user[password]',placeholder='Password',aria-describedby='add_user_right')
						.form-group
							label.control-label.col-sm-2(for='phone') 手机号
							.col-sm-10
								input.form-control#phone(type='text',name='user[phone]',placeholder='Phone Number',aria-describedby='add_user_right')
						.form-group
							label.control-label.col-sm-2(for='root') 权限
							.col-sm-10
								select.form-control#root(type='text',name='user[root]',aria-describedby='signin_name_right')
									option 超级管理员
									option 管理员
									option 普通用户
										
					.modal-footer
						.form-group
							.col-sm-offset-2.col-sm-2
								button.btn.btn-default(type='button',data-dismiss='modal') Cancel
							.col-sm-2
								button.btn.btn-success(type='submit') Confirm	
			

	script(src='/javascripts/footer.js',type='text/javascript')
	script(src='/javascripts/admin_user.js',type='text/javascript')