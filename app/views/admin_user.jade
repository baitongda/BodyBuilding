extends ./common/layout_admin
append header
	link(rel='stylesheet',href='/stylesheets/admin.css')
block content
	include ./common/admin_header
	.container.admin-user
		.admin-user-wrap
			h3 用户管理
			.row.user-manager
				.col-md-4
					.input-group
						input.form-control(type="text",placeholder="Search for...")
						span.input-group-btn
							button#serach.btn.btn-default(type="button") Go!
				.col-md-5
				.col-md-3
					button.btn.btn-default.pull-right#add-user(data-target='#userForm',data-toggle='modal') 添加用户
			table.table.table-hover
				thead
					th #
					th 用户名
					th 角色
					th 手机号
					th 注册时间
					th 操作
				tbody
					tr(data-id='fjf9alsdjkfasdfjalsjfd12384y')
