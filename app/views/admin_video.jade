extends ./common/layout_admin
append header
	link(rel='stylesheet',href='/stylesheets/admin.css')
block content
	include ./common/admin_header
						
	.container.admin-video
		.admin-video-wrap
			h3 新闻管理
			.row.video-manager
				.col-md-4
					.input-group
						input.form-control(type="text",placeholder="Search for...")
						span.input-group-btn
							button#serach.btn.btn-default(type="button") Go!
				.col-md-5
				.col-md-3
					button.btn.btn-default.pull-right#add-video(data-target='#videoForm',data-toggle='modal') 添加视频
			table.table.table-hover
				thead
					th #
					th 视频名称
					th 地址
					th 时长
					th 简介
					th 更新时间
					th 添加人
					th 操作
				tbody
					tr(data-id='fjf9alsdjkfasdfjalsjfd12384y')
						td 1
						td.video-name 我是视频的名字	
						td.video-url http://www.baidu.com/p/123456http://www.baidu.com/p/123456http://www.baidu.com/p/123456http://www.baidu.com/p/123456
						td.video-length 45min
						td.video-summary 30天练腹肌
						td.video-date 2016-1-1
						td.video-user Sun.
						td.admin-user-handle
							span: a.admin-user-edit(href="#",data-target='#videoForm',data-toggle='modal') 编辑
							span: a.admin-user-delete 删除
					
			.admin-user-page.pull-right
				nav
					ul.pagination
						li: a(href='#',aria-label='Previous'): span(aria-hidden='true') &laquo;
						li.active: a(href='#') 1
						li: a(href='#') 2
						li: a(href='#') 3
						li: a(href='#') 4
						li: a(href='#') ...
						li: a(href='#') 10
						li: a(href='#',aria-label='Next'): span(aria-hidden='true') &raquo; 
		
	//- add video modal
	.modal.fade#videoForm(tabindex='-1',role='dialog',aria-labelledby="myModalLabel")
		.modal-dialog(role='document')
			.modal-content
				form.form-horizontal#videoForm(method='POST',action='/admin/video/edit')
					.modal-header 
						span.header-title 添加视频
						button.close(type='button',data-dismiss='modal',aria-label='Close'): span(aria-hidden='true') &times;
					.modal-body
						.form-group
							label.control-label.col-sm-2(for='video-name') 视频名称
							.col-sm-10
								input.form-control#video-name(type='text',name='video[name]',placeholder='Name',aria-describedby='add_video_right')
						.form-group
							label.control-label.col-sm-2(for='video-url') 地址
							.col-sm-10
								input.form-control#video-url(type='text',name='video[url]',placeholder='Url',aria-describedby='add_video_right')
						.form-group
							label.control-label.col-sm-2(for='video-length') 时长
							.col-sm-10
								input.form-control#video-length(type='text',name='video[length]',placeholder='Length',aria-describedby='add_video_right')
						.form-group
							label.control-label.col-sm-2(for='video-summary') 简介
							.col-sm-10
								input.form-control#video-summary(type='text',name='video[summary]',placeholder='Summary',aria-describedby='add_video_right')
						.form-group
							label.control-label.col-sm-2(for='video-date') 更新时间
							.col-sm-10
								input.form-control#video-date(type='text',name='video[date]',placeholder='Date',aria-describedby='add_video_right')
						.form-group
							label.control-label.col-sm-2(for='video-admin') 添加人
							.col-sm-10
								select.form-control#video-admin(type='select',name='video[admin]',aria-describedby='add_video_right')
									option Sun.
									option Ju.
									option John.
									option Papi酱
					.modal-footer
						.form-group
							.col-sm-offset-2.col-sm-2
								button.btn.btn-default(type='button',data-dismiss='modal') Cancel
							.col-sm-2
								button.btn.btn-success(type='submit') Confirm	
			
	script(src='/javascripts/footer.js',type='text/javascript')
	script(src='/javascripts/admin_video.js',type='text/javascript')