extends ./common/layout
append header
	link(rel='stylesheet',href='/stylesheets/user_validate.css')
block content
	include ./common/nav
	include ./common/signinModal
	include ./common/signupModal
	.container.main_body
		.col-md-8
			.carousel.slide#index_page_carousel(data-ride='carousel')
				ol.carousel-indicators
					li.active(data-target='#index_page_carousel',data-slide-to='0')
					li(data-target='#index_page_carousel',data-slide-to='1')
					li(data-target='#index_page_carousel',data-slide-to='2')
				.carousel-inner
					.item.active
						.carousel-caption
							h3 Page1
							p some instructions of page1
						img(src='/images/body1.jpg',alt='111111')
					.item
						.carousel-caption
							h3 Page2
							p some instructions of page2
						img(src='/images/body2.png',alt='222222')
					.item
						.carousel-caption
							h3 Page3
							p some instructions of page3
						video(src='/images/bodybuilding.webm',width='100%',height='100%', loop,autoplay)
				a.left.carousel-control(href='#index_page_carousel',role='button',data-slide='prev')
					span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
					span.sr-only Previous
				a.right.carousel-control(href='#index_page_carousel',role='button',data-slide='next')
					span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
					span.sr-only Next
		.col-md-4
			.right-bar
				.right-bar-head
					p.right-bar-summary 近期最热
				.right-bar-body
					ul.right-bar-news
						each item in hots
							li.right-bar-new
								a(href='#{item.url}') #{item.title}
		ul.col-md-8.news-model
			each item in news
				li
					.news
						.news-top
							.col-md-8
								.news-top-header.pull-left
									a.news-top-name.pull-left(href="http://localhost:3000/user/admin")
										img(src="/images/user_header.png",alt="")
										span #{item.user}
									span.news-top-date #{moment(item.date).format('YYYY-MM-DD')}
							.news-top-right.pull-right
								span.news-top-fork 赞
									font.news-fork-num #{item.fork}
								span.news-top-fav 收藏
									font.news-fav-num #{item.fav}
						.news-body
							.news-head
							.news-main
								.col-md-4.news-left
									a(href="#{item.url}"): img(src="#{item.image}")
								.col-md-8.news-right
									p.news-right-title
										a(href="#{item.url}") #{item.title}
									a.news-right-detail(href="#") #{item.content}
